<% include ../partials/header %>
<div class="container">
    <div class="row text-center">
          <h2> New summiter for <%= mountain.name %>!</h2>
        <div class="thumbnail" style="width:50%; margin: auto ;">
            <form action="/mountains/<%= mountain._id %>/summiters" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="summiter[name]" placeholder="Summiter's Full Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="summiter[nationality]" placeholder="Nationality">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="summiter[image]" placeholder="Summiter's picture">
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="summiter[birthday]" placeholder="Summiter's birthday">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="summiter[about]" placeholder="About the summiter">
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-large btn-block">Submit!</button>
                </div>

            </form>
            <a class="btn btn-default btn-large btn-block" style="background-color:#888;color:#555;" href="/mountains/<%= mountain._id %>"> Go back</a>
        </div>


    </div>

</div>

<% include ../partials/footer %>
